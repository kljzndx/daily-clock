<Window x:Class="DailyClock.Views.RecordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DailyClock.Views"
        xmlns:vm="clr-namespace:DailyClock.ViewModels"
        mc:Ignorable="d"
        Title="RecordWindow" Height="300" Width="200"
        d:DataContext="{d:DesignInstance vm:RecordViewModel}"
        DataContext="{Binding Source={StaticResource Locator}, Path=Record}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1">
            <Label>分组:</Label>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ComboBox ItemsSource="{Binding Groups}" DisplayMemberPath="Value" SelectedValuePath="Key" SelectedValue="{Binding TheRecord.GroupId}"/>
                <Button Grid.Column="1" Click="ManageGroup_Button_Click">管理</Button>
            </Grid>
            <Label>名称</Label>
            <TextBox Text="{Binding TheRecord.Name}" />
            <Label>详细信息</Label>
            <TextBox  Text="{Binding TheRecord.Information}"/>

            <Button Command="{Binding SubmitCommand}">提交</Button>
        </StackPanel>
    </Grid>
</Window>
